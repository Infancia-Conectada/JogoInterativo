<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= conteudo.titulo %></title>
    <link rel="stylesheet" href="/css/explicacao2.css">
</head>
<body>
    <div class="container">
        <header class="header">
            <div class="browser-bar">
                <div class="browser-dots">
                    <div class="dot orange"></div>
                    <div class="dot orange"></div>
                    <div class="dot orange"></div>
                </div>
            </div>
            <h1 class="main-title"><%= conteudo.titulo %></h1>
        </header>

        <main class="content">
            <!-- SEÇÃO DE PASSOS/TEXTO -->
            <section class="rules-section">
                <% if (conteudo.texto_secundario_1 || conteudo.texto_secundario_2 || conteudo.texto_secundario_3 || conteudo.texto_secundario_4 || conteudo.texto_secundario_5) { %>
                    <ul class="steps-list">
                        <% if (conteudo.texto_secundario_1) { %>
                            <li class="step-item">
                                <span class="step-number">1</span>
                                <span class="step-text"><%= conteudo.texto_secundario_1 %></span>
                            </li>
                        <% } %>
                        <% if (conteudo.texto_secundario_2) { %>
                            <li class="step-item">
                                <span class="step-number">2</span>
                                <span class="step-text"><%= conteudo.texto_secundario_2 %></span>
                            </li>
                        <% } %>
                        <% if (conteudo.texto_secundario_3) { %>
                            <li class="step-item">
                                <span class="step-number">3</span>
                                <span class="step-text"><%= conteudo.texto_secundario_3 %></span>
                            </li>
                        <% } %>
                        <% if (conteudo.texto_secundario_4) { %>
                            <li class="step-item">
                                <span class="step-number">4</span>
                                <span class="step-text"><%= conteudo.texto_secundario_4 %></span>
                            </li>
                        <% } %>
                        <% if (conteudo.texto_secundario_5) { %>
                            <li class="step-item">
                                <span class="step-number">5</span>
                                <span class="step-text"><%= conteudo.texto_secundario_5 %></span>
                            </li>
                        <% } %>
                    </ul>
                <% } %>
            </section>

            <!-- SEÇÃO DE IMAGENS -->
            <aside class="image-section">
                <% if (imagemIntro) { %>
                    <div class="image-container">
                        <img src="<%= imagemIntro %>" alt="Ilustração da intro" class="image-item">
                    </div>
                <% } %>
                
                <% if (conteudo.imagem_1) { %>
                    <div class="image-container">
                        <img src="<%= conteudo.imagem_1 %>" alt="Ilustração 1" class="image-item">
                    </div>
                <% } %>
                
                <% if (conteudo.imagem_2) { %>
                    <div class="image-container">
                        <img src="<%= conteudo.imagem_2 %>" alt="Ilustração 2" class="image-item">
                    </div>
                <% } %>
            </aside>
        </main>

        <!-- RODAPÉ COM BOTÕES -->
        <footer class="footer">
            <button class="learn-more-btn" id="prevBtn" type="button" onclick="voltarPagina()" <% if (!temAnterior) { %>disabled<% } %>>
                <span>Página Anterior</span>
                <div class="btn-glow"></div>
            </button>

            <button class="learn-more-btn" id="nextBtn" type="button" onclick="proximaPagina()">
                <span>Próxima Página</span>
                <div class="btn-glow"></div>
            </button>
        </footer>
    </div>

    <script>
        const paginaAtual = <%= ordem %>;
        const temProxima = <%= temProxima %>;
        const temAnterior = <%= temAnterior %>;
        const tipoExplicacao = '<%= tipo %>';
        const totalIntros = 3; // Total de intros (1, 2, 3)

        function voltarPagina() {
            // Volta para a intro correspondente
            window.location.href = `/intro/<%= ordem %>`;
        }

        function proximaPagina() {
            const proximaOrdem = <%= ordem %> + 1;
            
            // Se ainda há mais intros, vai para a próxima intro
            if (proximaOrdem <= totalIntros) {
                window.location.href = `/intro/${proximaOrdem}`;
            } else {
                // Se terminou as intros, vai para o quiz
                window.location.href = `/quiz/1`;
            }
        }

        // Efeito de highlight ao clicar nos passos
        const stepItems = document.querySelectorAll('.step-item');
        stepItems.forEach(item => {
            item.addEventListener('click', function() {
                stepItems.forEach(step => step.classList.remove('highlighted'));
                this.classList.add('highlighted');
            });
        });
    </script>
</body>
</html>