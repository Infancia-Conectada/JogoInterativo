<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= conteudo.titulo %></title>
    <link rel="stylesheet" href="/css/intro.css">
</head>
<body>
    <div class="container">
        <header class="header">
            <div class="browser-bar">
                <div class="browser-dots">
                    <div class="dot"></div>
                    <div class="dot"></div>
                    <div class="dot"></div>
                </div>
            </div>
            <h1 class="main-title"><%= conteudo.titulo %></h1>
        </header>

        <main class="content">
            <div class="ensino-section">
                <div class="image-container">
                    <img src="<%= conteudo.imagem %>" 
                         alt="<%= conteudo.titulo %>" 
                         class="ensino-image">
                </div>
            </div>
        </main>

        <footer class="footer">
            <button class="nav-btn" id="prevBtn" onclick="voltarPagina()" <% if (!temAnterior) { %>disabled<% } %>>
                <span>PÁGINA ANTERIOR</span>
            </button>
            
            <button class="nav-btn primary" id="nextBtn" onclick="proximaPagina()">
                <span>PRÓXIMA PÁGINA</span>
                <div class="btn-glow"></div>
            </button>
        </footer>
    </div>

    <!-- Canvas para confetes -->
    <canvas id="confetti-canvas"></canvas>

    <script>
        // Dados da página atual
        const paginaAtual = <%= ordem %>;
        const temProxima = <%= temProxima %>;
        const temAnterior = <%= temAnterior %>;
        const totalIntros = <%= totalIntros %>;

        function voltarPagina() {
            if (paginaAtual > 1) {
                // Volta para a explicação anterior se houver
                window.location.href = `/explicacao/<%= ordem - 1 %>/1`;
            }
        }

        function proximaPagina() {
            // Sempre vai para a explicação correspondente ao número da intro
            window.location.href = `/explicacao/<%= ordem %>/1`;
        }
    </script>
</body>
</html>